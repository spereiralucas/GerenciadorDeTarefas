<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name: 'tarefas'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 20
        Button:
            text: 'Tarefas'
            on_release: app.root.current = 'tarefas'
        Button:
            text: 'Assistente'
        Button:
            text: 'Sair'
            on_release: app.stop()

<Tarefas>:
    name: 'tarefas'
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:'Tarefas'
                    on_release: app.root.current = 'menu'
                ActionButton:
                    text: 'Sair'
                    on_release: app.stop()
        ScrollView:
            BoxLayout:
                id: box
                orientation:'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 100
            TextInput:
                id: texto
            Button:
                text: '+'
                size_hint_x: None
                width: 100
                on_release: root.addWidget()

<Tarefa>:
    size_hint_y: None
    height: 100
    Label:
        id: label
        front_size: 30
    Button:
        text: 'X'
        size_hint_x: None
        width: 100
        on_release: app.root.get_screen('tarefas').ids.box.remove_widget(self.parent)